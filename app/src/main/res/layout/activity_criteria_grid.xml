<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#EFEFEF"
    android:orientation="vertical"
    tools:context="com.integris.mra.CriteriaGridActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbThread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Thread">
        </RadioButton>
        <RadioButton
            android:id="@+id/rbLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level">
        </RadioButton>
        <RadioButton
            android:id="@+id/rbAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All">
        </RadioButton>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/layoutThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/spThreads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/threadsArray"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                    <TextView
                        android:id="@+id/tvThreadCriteria1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"/>
                    <TextView
                        android:id="@+id/tvThreadCriteria2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"/>
                    <TextView
                        android:id="@+id/tvThreadCriteria3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"/>
                    <TextView
                        android:id="@+id/tvThreadCriteria4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"/>
                    <TextView
                        android:id="@+id/tvThreadCriteria5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"/>
                    <TextView
                        android:id="@+id/tvThreadCriteria6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"/>
                    <TextView
                        android:id="@+id/tvThreadCriteria7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"/>
                    <TextView
                        android:id="@+id/tvThreadCriteria8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"/>
                    <TextView
                        android:id="@+id/tvThreadCriteria9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"/>
                    <TextView
                        android:id="@+id/tvThreadCriteria10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TableLayout
            android:id="@+id/tableCriteriaHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:stretchColumns="*"
            android:background="@drawable/custom_rectangle">
            <TableRow
                android:layout_marginTop="5dp">
                <TextView
                    android:text="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>
                <TextView
                    android:text="2"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>
                <TextView
                    android:text="3"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>
                <TextView
                    android:text="4"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>
                <TextView
                    android:text="5"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>
                <TextView
                    android:text="6"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>
                <TextView
                    android:text="7"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>
                <TextView
                    android:text="8"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>
                <TextView
                    android:text="9"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>
                <TextView
                    android:text="10"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"/>
            </TableRow>
            <TableRow>
                <CheckBox
                    android:id="@+id/cbCol1"/>
                <CheckBox
                    android:id="@+id/cbCol2"/>
                <CheckBox
                    android:id="@+id/cbCol3"/>
                <CheckBox
                    android:id="@+id/cbCol4"/>
                <CheckBox
                    android:id="@+id/cbCol5"/>
                <CheckBox
                    android:id="@+id/cbCol6"/>
                <CheckBox
                    android:id="@+id/cbCol7"/>
                <CheckBox
                    android:id="@+id/cbCol8"/>
                <CheckBox
                    android:id="@+id/cbCol9"/>
                <CheckBox
                    android:id="@+id/cbCol10"/>
            </TableRow>
        </TableLayout>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gridview"
            android:columnWidth="90dp"
            android:numColumns="12"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
    </LinearLayout>
</LinearLayout>
