<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#EFEFEF"
    tools:context="com.integris.mra.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="25dp"
                android:layout_alignParentLeft="true"
                android:text="New Assessment"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/docent_logo_small"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:text="MRL:"/>
                <RadioGroup
                    android:id="@+id/rgTargetLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbTargetLevel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="1">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbTargetLevel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbTargetLevel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbTargetLevel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbTargetLevel5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbTargetLevel6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbTargetLevel7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbTargetLevel8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbTargetLevel9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rbTargetLevel10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10">
                    </RadioButton>
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:text="Date:"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:layout_margin="10dp"
                    android:hint="Date"
                    android:ems="10"
                    android:id="@+id/etTargetDate" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scope:"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:id="@+id/tvScope" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etScope"
                    android:layout_margin="10dp"
                    android:hint="Scope"
                    android:scrollbars="vertical"
                    android:minLines="2"
                    android:ems="10" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Members:"
                        android:layout_margin="10dp"
                        android:textSize="20dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/tvTeamMembers" />
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:layout_margin="10dp"
                        android:hint="Name"
                        android:ems="10"
                        android:id="@+id/etName" />
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/etRole"
                        android:layout_margin="10dp"
                        android:hint="Role"
                        android:ems="10" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:id="@+id/tvLocation" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etLocation"
                    android:layout_margin="10dp"
                    android:hint="Location"
                    android:ems="10" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskbook Version:"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:id="@+id/tvDeskbookVersion" />
                <Spinner
                    android:id="@+id/spDeskbookVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:entries="@array/deskbookVersions"/>
                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Start"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/blue_rectangle"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
